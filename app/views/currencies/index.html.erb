<p class="alert alert-success" style="color: green;"><%= notice %></p>

<% content_for :title, "Currencies" %>

<div class="container mt-4">
  <h1 class="display-4 text-center">Currencies</h1>

  <table class="table table-striped table-hover mt-4">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Category Code</th>
        <th scope="col">Currency Symbol</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @currencies.each_with_index do |currency, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= currency.currency_code %></td>
          <td><%= currency.symbol %></td>
          <td>
            <%= link_to "Show", currency, class: "btn btn-primary btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center mt-3">
    <%= link_to "New Currency", new_currency_path, class: "btn btn-success" %>
  </div>
</div>
