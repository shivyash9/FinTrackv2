<div id="<%= dom_id currency %>" class="card mb-3">
  <div class="card-body">
    <h5 class="card-title">Currency Details</h5>

    <p class="mb-1">
      <strong>Currency Code:</strong>
      <span class="badge bg-secondary"><%= currency.currency_code %></span>
    </p>

    <p class="mb-1">
      <strong>Symbol:</strong>
      <span class="badge bg-secondary"><%= currency.symbol %></span>
    </p>
  </div>
</div>
