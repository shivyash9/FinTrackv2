<div class="container mt-5">
  <div class="card text-center shadow-lg">
    <div class="card-body">
      <h1 class="display-4 mb-3">Welcome to Your Dashboard</h1>
      <p class="lead text-muted mb-4">You're successfully logged in!</p>
      <%= button_to 'Log Out', logout_path, method: :post, data: { confirm: 'Are you sure you want to log out?' }, class: 'btn btn-danger btn-lg' %>
    </div>
  </div>

  <div class="row mt-5">

    <div class="col-md-4 mb-4">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h5 class="card-title">My Budgets</h5>
          <p class="card-text">View and manage all budgets.</p>
          <%= link_to 'View Budgets', user_budgets_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>


    <div class="col-md-4 mb-4">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h5 class="card-title">My Expenses</h5>
          <p class="card-text">View and manage all expenses.</p>
          <%= link_to 'View Expenses', expenses_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>

    <div class="col-md-4 mb-4">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h5 class="card-title">Manage Tenants</h5>
          <p class="card-text">View and manage all tenants.</p>
          <%= link_to 'View Tenants', tenants_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>

    <div class="col-md-4 mb-4">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h5 class="card-title">Manage Currencies</h5>
          <p class="card-text">View and manage currency types.</p>
          <%= link_to 'View Currencies', currencies_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>

    <div class="col-md-4 mb-4">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h5 class="card-title">Manage Expense Categories</h5>
          <p class="card-text">View and manage expense categories.</p>
          <%= link_to 'View Expense Categories', expense_categories_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>


  <div class = "analytics">

  </div>

</div>

<style>
  body {
    background-color: #f8f9fa;
  }
  .card {
    border-radius: 1rem;
  }
  .logout-button {
    transition: background-color 0.3s ease;
  }
  .logout-button:hover {
    background-color: #c82333; /* Darker red for hover effect */
  }
</style>
