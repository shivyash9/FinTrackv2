<div class="container mt-5">
  <div class="card shadow-lg">
    <div class="card-body">
      <h1 class="text-center">Log In</h1>

      <%= form_with url: session_path, local: true do |form| %>
        <div class="mb-3">
          <%= form.label :email, class: 'form-label' %>
          <%= form.email_field :email, class: 'form-control', placeholder: 'Enter your email' %>
        </div>
        <div class="mb-3">
          <%= form.label :password, class: 'form-label' %>
          <%= form.password_field :password, class: 'form-control', placeholder: 'Enter your password' %>
        </div>
        <div class="d-grid">
          <%= form.submit "Log In", class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>

      <div class="mt-3 text-center">
        <%= link_to "Sign Up", new_user_path, class: 'btn btn-link' %>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background-color: #f8f9fa;
  }
</style>
