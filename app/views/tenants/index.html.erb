<p class="alert alert-success" style="color: green;"><%= notice %></p>

<% content_for :title, "Tenants" %>

<div class="container mt-4">
  <h1 class="display-4 text-center">Tenants</h1>

  <table class="table table-striped table-hover mt-4">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">DB Name</th>
        <th scope="col">DB Username</th>
        <th scope="col">Domain Name</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tenants.each_with_index do |tenant, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= tenant.database_name %></td>
          <td><%= tenant.database_username %></td>
          <td><%= tenant.domain_name %></td>
          <td>
            <%= link_to "Show", tenant, class: "btn btn-primary btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center mt-3">
    <%= link_to "New Tenant", new_tenant_path, class: "btn btn-success" %>
  </div>
</div>
