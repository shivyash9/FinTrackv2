<%= form_with(model: @expense, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :expense_category_id, 'Expense Category' %>
    <%= form.collection_select :expense_category_id, @expense_categories, :id, :name, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label :amount %>
    <%= form.number_field :amount, step: 0.01, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :currency_id, 'Currency' %>
    <%= form.collection_select :currency_id, @currencies, :id, :symbol, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :expense_date %>
    <%= form.date_field :expense_date, class: 'form-control' %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
  <%= link_to 'Back', expenses_path, class: "btn btn-secondary" %>
<% end %>
