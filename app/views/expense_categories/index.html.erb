<p class="alert alert-success" style="color: green;"><%= notice %></p>

<% content_for :title, "Expense Categories" %>

<div class="container mt-4">
  <h1 class="display-4 text-center">Expense Categories</h1>

  <table class="table table-striped table-hover mt-4">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Category Name</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @expense_categories.each_with_index do |expense_category, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= expense_category.name %></td>
          <td>
            <%= link_to "Show", expense_category, class: "btn btn-primary btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center mt-3">
    <%= link_to "New Expense Category", new_expense_category_path, class: "btn btn-success" %>
  </div>
</div>
